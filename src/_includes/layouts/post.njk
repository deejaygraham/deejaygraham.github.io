{% extends 'layouts/base.njk' %}

{% block precontent %}

{% if thumbnail %} 

<section class="hero">
  <figure class="image">
    <img src="{{ thumbnail }}" alt="{{ title }}">
  </figure>
</section>

{% endif %}

{% endblock %}

{% block postcontent %}

{{ page.url }} or {{ page.permalink }} or {{ permalink }}

{% if tags %}
  {% set relatedTag = tags | randomItem %}
  {% if collections[relatedTag].length > 1 %}
<aside>
  <div class="related-posts>
    <h3 class="is-size-3">More posts tagged with #{{ relatedTag }}</h3>
    <ul>
    {% for item in collections[relatedTag] | limit(6) %}
      <li><a title="read post" href="{{ item.url }}">{{ item.data.title }}</a></li>
    {% endfor %}
    </ul>
  </div>
</aside>
  {% endif %}
{% endif %}

{% endblock %}
