{% extends 'layouts/post.njk' %}
{% block content %}

{% if comment %}
<section class="section">
{{ comment }}
</section>
{% endif %}

{% set fontSize = 'is-size-5' %}
{% if size == "large" %}
{% set fontSize = "is-size-1" %}
{% elif size == "medium" %}
{% set fontSize = "is-size-3" %}
{% endif %} 

<figure class="quote">
        <blockquote class="{{ fontSize }}">
        {{ content | safe }}
        </blockquote>
        <figcaption>
        {% if attribution %}&mdash; {{ attribution }}{% endif %}{% if publication %}, {{ publication }}{% endif %}
        </figcaption>
</figure>

{% endblock %}
