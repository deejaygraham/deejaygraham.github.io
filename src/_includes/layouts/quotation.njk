{% extends 'layouts/post.njk' %}
{% block content %}

{% if comment %}
<section class="section">
{{ comment }}
</section>
{% endif %}

{# default to small font size #}
{% set fontSize = 'is-size-5' %}
{% set words = content | wordCount %}
{% if words < 100 %}
{% set fontSize = "is-size-1" %}
{% elif words < 500 %}
{% set fontSize = "is-size-3" %}
{% endif %} 

<figure class="quote">
{% include "icons/quotation-mark.svg" %}
        <blockquote class="{{ fontSize }}">
        {{ content | safe }}
        </blockquote>
        <figcaption>
        {% if attribution %}&mdash; {{ attribution }}{% endif %}{% if publication %}, {{ publication }}{% endif %}
        </figcaption>
</figure>

{% endblock %}
