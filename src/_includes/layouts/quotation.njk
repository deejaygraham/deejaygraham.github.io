{% extends 'layouts/base.njk' %}

{% block content %}

{% if comment %}
<section class="section">
{{ comment }}
</section>
{% endif %}

<nav class="level is-mobile article-tags" id="article-meta">
	<div class="level-left">
		<span class="date"><time datetime="{{ page.date | dateISO }}">{{ page.date | dateFull }}</time></span>
	</div>	
{% if tags %}
	<div class="level-right">
	{% for tag in tags %}
	{% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
		<span class="tag level-item"><a href="{{ tagUrl }}">{{ tag }}</a></span> 
	{% endfor %}
	</div>
{% endif %}
</nav>
<h1 class="title is-1">{{ title }}</h1>
<figure class="quote">
        <blockquote>
        {{ content | safe }}
        </blockquote>
        <figcaption>
        {% if attribution %}&mdash; {{ attribution }}{% endif %}{% if publication %}, {{ publication }}{% endif %}
        </figcaption>
</figure>

{% endblock %}
