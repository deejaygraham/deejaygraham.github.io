{% extends 'layouts/base.njk' %}

{% block content %}

{% if comment %}
<section class="section">
{{ comment }}
</section>
{% endif %}

<nav class="level is-mobile article-tags" id="article-meta">
	<div class="level-left">
		<span class="date"><time datetime="{{ page.date | dateISO }}">{{ page.date | dateFull }}</time></span>
	</div>	
{% if tags %}
	<div class="level-right">
	{% for tag in tags %}
	{% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
		<span class="tag level-item"><a href="{{ tagUrl }}">{{ tag }}</a></span> 
	{% endfor %}
	</div>
{% endif %}
</nav>
<h1 class="title is-1">{{ title }}</h1>
{% if size %} 
{% if size == "large" %}<figure class="quote is-size-1">{% endif %}
{% if size == "medium" %}<figure class="quote is-size-3">{% endif %}
{% if size == "small" %}<figure class="quote is-size-5">{% endif %}
{% else %}
<figure class="quote">
{% endif %}
        <blockquote>
        {{ content | safe }}
        </blockquote>
        <figcaption>
        {% if attribution %}&mdash; {{ attribution }}{% endif %}{% if publication %}, {{ publication }}{% endif %}
        </figcaption>
</figure>

{% endblock %}
