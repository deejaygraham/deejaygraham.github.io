{% extends 'layouts/post.njk' %}
{% block content %}

{% if comment %}
<section class="section">
{{ comment }}
</section>
{% endif %}

{% if size %} 
{% if size == "large" %}<figure class="quote is-size-1">{% endif %}
{% if size == "medium" %}<figure class="quote is-size-3">{% endif %}
{% if size == "small" %}<figure class="quote is-size-5">{% endif %}
{% else %}<figure class="quote">{% endif %}
        <blockquote>
        {{ content | safe }}
        </blockquote>
        <figcaption>
        {% if attribution %}&mdash; {{ attribution }}{% endif %}{% if publication %}, {{ publication }}{% endif %}
        </figcaption>
</figure>

{% endblock %}
