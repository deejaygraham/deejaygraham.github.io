<footer class="footer">
	<section class="section">
		<nav class="level is-mobile" aria-label="footer navigation">
		{# social media #}
		{% for item in socialmedia %}
    <a class="level-item" href="{{ item.url }}" aria-label="{{ item.name }}" target="_blank" rel="noreferrer">
			<figure class="image is-24x24">
				<img src="{{ site.url }}/img/{{ item.icon }}" alt="{{ item.name }}" class="social-icon">
			</figure>
  		</a>
          {% endfor %}
      	</nav>
	<div class="content has-text-centered mt-6">
      		<p>&copy; deejaygraham 2011 - <time datetime="{{ site.date | dateISO }}">{{ site.date | dateYear }}</time></p>
		<p>Last updated: <time datetime="{{ buildInfo.time.raw }}">{{ buildInfo.time.formatted }}</time>
    	</div>
	<div class="content has-text-centered mt-6">
		{% include "partials/powered-by.njk" %}
	</div>
</section>
</footer>

