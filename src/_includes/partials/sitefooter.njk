<footer class="footer">
<section class="section">
	<nav class="level" aria-label="footer navigation">
	{# social media #}
	{% for item in socialmedia %}
            	<a class="level-item" href="{{ item.url }}" aria-label="{{ item.name }}" target="_blank" rel="noreferrer">
			<figure class="image is-24x24">
				<img src="{{ site.url }}/img/{{ item.icon }}" alt="{{ item.name }}" >
			</figure>
  		</a>
          {% endfor %}
      	</nav>

	<div class="content has-text-centered mt-6">
		Powered by:
		{% for item in poweredby %}
			<a href="{{ item.url }}" aria-label="{{ item.name }}" target="_blank" rel="noreferrer">{{ item.name }}</a> 
			{% if not loop.last %} | {% endif %}
		{% endfor %}
	</div>
	<div class="content has-text-centered mt-6">
      		<p>&copy; deejaygraham 2011 - <time datetime="{{ site.buildTime | dateISO }}">{{ site.buildTime | dateYear }}</time></p>
    	</div>
</section>
</footer>

