<footer class="footer">
<section class="section">
	<nav class="level" aria-label="footer navigation">
		{# site navigation #}
		<div class="level-left">
          	{% for item in nav %}
        		<a class="level-item" title="{{ item.navLabel }}" href="{{ site.url }}{{ item.navUrl }}">{{ item.navLabel }}</a>
          	{% endfor %}
		</div>
		{# social media #}
		<div class="level-right">
		{% for item in socialmedia %}
            		<a class="level-item" href="{{ item.url }}" aria-label="{{ item.name }}" target="_blank" rel="noreferrer">
				<figure class="image is-24x24">
					<img src="{{ site.url }}/img/{{ item.icon }}" />
				</figure>
	    		</a>
          	{% endfor %}
		</div>
      	</nav>

	<div class="content has-text-centered">
		<!-- hosting etc -->
	</div>
	<div class="content has-text-centered mt-6">
      		<p>&copy; deejaygraham 2011 - <time datetime="{{ site.buildTime | dateISO }}">{{ site.buildTime | dateYear }}</time></p>
    	</div>
</section>
</footer>

{# Scripts #}
<script type="text/javascript" src="{{ site.url }}/js/bulma.js"></script>
