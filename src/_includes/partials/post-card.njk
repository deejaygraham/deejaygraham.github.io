{# Requires a global variable to be set called post with url, title, date, tags (array) #}
<div class="column is-4">
  <div class="card large is-shadowless">	
  	<div class="card-content">
      <h2 class="title"><a href="{{ url }}">{{ title }}</a></h2>
      {% if subtitle %}
      <p class="subtitle is-pulled-left">{{ subtitle }}</p>
      {% endif %}
      {%- if date -%}
      <p class="subtitle is-pulled-left"><time datetime="{{ date | dateISO }}">{{ date | dateFull }}</time></p>
      {%- endif -%}
      {% if tags %}
      <p class="is-pulled-right">
      {%- for tag in tags -%}
        <a href="/tags/{{tag}}">#{{ tag }}</a>
        {% if not loop.last %} | {% endif %}
      {%- endfor -%}
      </p>
    {% endif %}
    </div>
  </div>
</div>  
