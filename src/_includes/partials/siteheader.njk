<!-- partials/siteheader -->
<header class="header">
  <nav class="navbar" aria-label="main navigation" tabindex="-1">
    <div class="container">
      <div class="navbar-brand">
        <a class="navbar-item" title="{{ site.title }}" href="/">
          <img src="{{ site.logo }}" alt="{{ site.description }}" >
        </a>
        <a class="navbar-item" title="{{ site.title }}" href="/">{{ site.title }}</a>
        <a role="button" class="navbar-burger" aria-label="menu" data-target="navbarMenu">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarMenu" class="navbar-menu">
        <div class="navbar-end">
        {% for item in nav %}
          <a class="navbar-item" aria-label="{{ item.name }}" title="{{ item.name }}" href="{{ site.url }}{{ item.url }}">{{ item.name }}</a>
        {% endfor %}
        </div>
      </div>
    </div>
  </nav>
</header>

{# if hero %}
<section class="hero is-large {{ hero }}">
    <div class="hero-body {{ hero }}" />
</section>
{% endif #}

