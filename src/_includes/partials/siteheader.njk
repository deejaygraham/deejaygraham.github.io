<!-- partials/siteheader -->
<header class="header" role="banner">
  <nav class="navbar" role="navigation" aria-label="main navigation" tabindex="-1">
    <div class="navbar-brand">
      <a class="navbar-item has-background-white" title="{{ site.name }}" href="/">
        <img src="/img/avatar-small.webp" alt="{{ site.description }}" />
      </a>
      <a role="button" class="navbar-burger" aria-label="menu" aria-expandable="false" data-target="navbarMenu">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarMenu" class="navbar-menu">
      <div class="navbar-end">
      {% for item in nav %}
        <a class="navbar-item" title="{{ item.name }}" href="{{ site.url }}{{ item.url }}">{{ item.name }}</a>
      {% endfor %}
      </div>
    </div>
  </nav>
</header>
<!-- partials/siteheader -->
