{# Requires a global variable to be set "postlist" #}

<div class="grid is-col-min-12">
{% for post in postlist %}
	<div class="cell">
    		<div class="card">
			<a href="{{ post.url }}">
				{% set thumbnailImage = '/img/thumbnails/notebook-420x255.webp' %}
				{% if post.data.thumbnail %}
					{% set thumbnailImage = post.data.thumbnail %}
				{% endif %}

  				<div class="card-image">
					<figure class="image">
  						<img src="{{ thumbnailImage }}" />
					</figure>
				</div>
	  		
				<div class="card-content">
    					<p class="title is-4">{{ post.data.title }}</p>
					{% if post.data.tags %}
						{% for tag in post.data.tags %}
						<span class="tag">{{ tag }}</span>
						{% endfor %}
					{% endif %}
					{% if post.date %}
						<p><time datetime="{{ post.date | dateISO }}">{{ post.date | dateFull }}</time></p>
					{% endif %}
    				</div>
			</a>
  		</div>
	</div>  
{% endfor %}
</div>
