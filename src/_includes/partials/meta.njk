{%- if title -%}{%- set pageTitle %}{{ title }} | {{ site.title }}{% endset -%}{%- else -%}{%- set pageTitle %}{{ site.title }}{% endset -%}{%- endif -%}
{%- if description %}
<meta name="description" content="{{ description }}">{% else %}<meta name="description" content="{{ site.description }}">
{%- endif -%}
{%- if tags %}
<meta content="{{ tags | arrayToCommaString }}" name="keywords">
{%- endif -%}
<meta name="author" content="{{ site.author }}" >
<meta property="og:site_name" content="{{ site.title }}" >
<meta property="og:title" content="{{ pageTitle }}" >
<meta property="og:url" content="{{ site.url ~ page.url }}" >
{%- set postTitle %}{{ title | safe }}.png{% endset %}
{%- set postDate %}{{ pages.date | dateFull }}{% endset %}
{%- set socialImageFile %}{{ title | slug }}.png{% endset %}
{%- set socialImageUrl %}{{ site.url }}/img/previews/{{ socialImageFile  }}{% endset %}
<meta property="og:image" content="{% GenerateSocialImage socialImageFile, postTitle, site.title %}" >
<meta itemprop="name" content="{{ pageTitle }}" >
<meta itemprop="url" content="{{ site.url ~ page.url }}" >
{# 11ty <3 #}
<meta name="generator" content="{{ eleventy.generator }}">
